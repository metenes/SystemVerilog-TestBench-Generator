#include "TestCaseGen.h"
#include <iostream>
#include<string>
#include <fstream>

using namespace std; 

TestCaseGen::TestCaseGen(vector<string> varList, string name) {
	// Read the file
	string output_name = name + ".txt"; 
	ofstream resFile(output_name);
	string output_text = "";

	for (int j = 0; j < pow(2, varList.size()); j++) { 
		for (int i = 0; i < varList.size(); i++) {
			string curVar = varList.at(i); 
			int out = int(j / pow(2, varList.size() - 1 - i) ) % 2; 
			string curLine = curVar + " = " + to_string(out) + "; \n";
			output_text += curLine; 
		}
	}

	
	// Close the file
	resFile.close();
}
